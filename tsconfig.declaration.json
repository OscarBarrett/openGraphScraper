{
  "include": [
    "index.ts",
    "lib/**/*"
  ],
  "exclude": [
    "tests/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
  }
}
